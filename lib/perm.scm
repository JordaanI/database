(define perm-mutex (make-mutex))

;; Optimizations exist here for large perms
(define (add-to-perm concept)
  (thread
   (lambda ()
     (mutex-lock! perm-mutex)
     (write-out perm-file concept append: #t)
     (mutex-unlock! perm-mutex))))
